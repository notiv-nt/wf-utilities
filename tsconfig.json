{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "types": ["chrome"],
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
